    {
      "identifier": "customApiKey",
      "type": "text",
      "title": "自定义API Key",
      "desc": "填写自定义提供商的API KEY",
      "textConfig": {
        "placeholderText": "例如: sk-xxx、token-xxx等"
      },
      "dependsOn": {
        "identifier": "provider",
        "value": "Custom"
      }
    },
    {
      "identifier": "customApiBase",
      "type": "text",
      "title": "自定义API基础URL",
