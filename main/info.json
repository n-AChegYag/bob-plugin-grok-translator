    {
      "identifier": "apiBase",
      "type": "text",
      "title": "全局API基础URL(可选)",
      "desc": "可选的全局API基础URL设置，将覆盖默认API URL",
      "textConfig": {
        "placeholderText": "例如: https://api.example.com/v1"
      }
    }
