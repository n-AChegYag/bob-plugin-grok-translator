{
  "identifier": "bob-plugin-grok-translator",
  "category": "translate",
  "version": "1.1.0",
  "name": "AI模型翻译插件",
  "summary": "使用多种AI模型(xAI、OpenAI、Google、Anthropic、DeepSeek)进行高质量翻译",
  "author": "n-AChegYag",
  "homepage": "https://github.com/n-AChegYag/bob-plugin-grok-translator",
  "appcast": "https://raw.githubusercontent.com/n-AChegYag/bob-plugin-grok-translator/main/main/appcast.json",
  "minBobVersion": "0.5.0",
  "options": [
    {
      "identifier": "provider",
      "type": "menu",
      "title": "AI提供商",
      "defaultValue": "xAI",
      "desc": "选择要使用的AI提供商",
      "menuValues": [
        {
          "title": "xAI",
          "value": "xAI"
        },
        {
          "title": "OpenAI",
          "value": "OpenAI"
        },
        {
          "title": "Anthropic",
          "value": "Anthropic"
        },
        {
          "title": "Google",
          "value": "Google"
        },
        {
          "title": "DeepSeek",
          "value": "DeepSeek"
        },
        {
          "title": "自定义提供商",
          "value": "Custom"
        }
      ]
    },
    {
      "identifier": "prompt",
      "type": "text",
      "title": "自定义提示词",
      "desc": "自定义prompt模式，在这里输入你的prompt。源语言为{sourceLang}，目标语言为{targetLang}，原文为{sourceText}。",
      "textConfig": {
        "type": "visible",
        "placeholderText": "请输入prompt"
      }
    },
    {
      "identifier": "xAIApiKey",
      "type": "text",
      "title": "xAI API Key",
      "desc": "填写xAI的API KEY",
      "textConfig": {
        "placeholderText": "例如: xai-xxxxxxxxxxxxxxxxxxxxxxxx"
      },
      "dependsOn": {
        "identifier": "provider",
        "value": "xAI"
      }
    },
    {
      "identifier": "xAIModel",
      "type": "menu",
      "title": "xAI",
      "defaultValue": "grok-3-fast-beta",
      "desc": "选择要使用的Grok模型",
      "menuValues": [
        {
          "title": "grok-3-beta",
          "value": "grok-3-beta"
        },
        {
          "title": "grok-3-fast-beta",
          "value": "grok-3-fast-beta"
        },
        {
          "title": "grok-3-mini-beta",
          "value": "grok-3-mini-beta"
        },
        {
          "title": "grok-3-mini-fast-beta",
          "value": "grok-3-mini-fast-beta"
        }
      ],
      "dependsOn": {
        "identifier": "provider",
        "value": "xAI"
      }
    },
    {
      "identifier": "openAIApiKey",
      "type": "text",
      "title": "OpenAI API Key",
